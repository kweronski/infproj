<texture id="rock_icon" src="./img/rock.jpeg"/>
<texture id="paper_icon" src="./img/paper.jpeg"/>
<texture id="scissors_icon" src="./img/scissors.jpeg"/>

<font id="AnonymousPro" src="./font/AnonymousPro-Regular.ttf"/>

<root>
	<button type="sprite">
		<position x="10" y="150"/>
		<fill_texture id="rock_icon"/>
		<scale x="0.2" y="0.2"/>

		<on_hover>
		</on_hover>

		<on_unhover>
		</on_unhover>

		<on_click>
		</on_click>

		<on_unclick>
		</on_unclick>
	</button>

	<button type="sprite">
		<position x="10" y="150 * 2"/>
		<fill_texture id="paper_icon"/>
		<scale x="0.2" y="0.2"/>

		<on_hover>
		</on_hover>

		<on_unhover>
		</on_unhover>

		<on_click>
		</on_click>

		<on_unclick>
		</on_unclick>
	</button>

	<button type="sprite">
		<position x="10" y="150 * 3"/>
		<fill_texture id="scissors_icon"/>
		<scale x="0.2" y="0.2"/>

		<on_hover>
		</on_hover>

		<on_unhover>
		</on_unhover>

		<on_click>
		</on_click>

		<on_unclick>
		</on_unclick>
	</button>

	<button type="rectangle">
		<position x="center"
			y="__n:window_height - __n:menu_button_height - __n:menu_button_padding / 2"/>
		<size w="__n:menu_button_width" h="__n:menu_button_height"/>
		<outline_thickness value="__n:menu_button_padding / 2"/>
		<outline_color r="__n:btcol0_r" g="__n:btcol0_g" b="__n:btcol0_b"/>
		<fill_color r="__n:btcol1_r" g="__n:btcol1_g" b="__n:btcol1_b"/>

		<text_fill_color r="__n:btcol0_r" g="__n:btcol0_g" b="__n:btcol0_b"/>
		<text_character_size value="0.08 * __n:window_height"/>
		<text_string value="Back"/>
		<text_font_id value="__s:menu_button_font"/>

		<on_hover>
			<outline_color r="__n:btcol2_r" g="__n:btcol2_g" b="__n:btcol2_b"/>
		</on_hover>

		<on_unhover>
			<outline_color r="__n:btcol0_r" g="__n:btcol0_g" b="__n:btcol0_b"/>
		</on_unhover>

		<on_click>
			<outline_color r="__n:btcol1_r" g="__n:btcol1_g" b="__n:btcol1_b"/>
			<activate_scene value="selection_menu"/>
		</on_click>

		<on_unclick>
			<outline_color r="__n:btcol0_r" g="__n:btcol0_g" b="__n:btcol0_b"/>
		</on_unclick>
	</button>
</root>
